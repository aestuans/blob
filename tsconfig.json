{
    "compilerOptions": {
      "target": "es2022",
      "module": "esnext",
      "lib": ["dom", "esnext"],
      "moduleResolution": "node",
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true 
    },
    "include": [
      "./**/*"
    ],
    "exclude": [
      "pkg"
    ]
  }
  